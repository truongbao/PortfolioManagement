<?xml version = "1.0" encoding = "UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="ServicePortfolioConfigurationMapper">

    <!--  - parametertype là tên lớp hoặc alias của tham số mà được truyền vào trong câu lệnh -->
    
    <insert id="insertServicePortfolioConfiguration" parameterType="ServicePortfolioConfiguration" >
        INSERT INTO service_portfolio_configurations ( SERVICE_ID,NAME,CREATED_AT ) VALUES ( #{service_id}, #{name}, #{created_at} );
    </insert>

    <update id="updateServicePortfolioConfiguration" parameterType="ServicePortfolioConfiguration">
        UPDATE service_portfolio_configurations SET  SERVICE_ID = #{service_id}, NAME = #{name}, STATE = #{state}, AGGREGATION_FINISHED_AT = #{aggregation_finished_at},
                                                     UPDATED_AT = #{updated_at}  WHERE ID = #{id};
    </update>
    
    <delete id="deleteServicePortfolioConfigurationById" parameterType="int">
        DELETE from service_portfolio_configurations WHERE ID = #{id}; 
    </delete>
    
    <select id="selectAllSPC" resultMap="result">
           SELECT spcf.ID, spcf.NAME, spcf.CREATED_AT, spcf.UPDATED_AT, spcf.AGGREGATION_FINISHED_AT
           FROM service_portfolio_configurations AS spcf WHERE spcf.SERVICE_ID = 3 ORDER BY spcf.ID DESC;  
    </select>
    
    <select id="selectServicePortfolioConfigurationById" parameterType="int" resultType="ServicePortfolioConfiguration">
        SELECT * FROM service_portfolio_configurations WHERE ID = #{id};
    </select>
    
    
    <!-- 
       +Thẻ resultMap được sử dụng để ánh xạ tên cột trong tập dữ liệu trả về 
        từ câu lệnh SELECT với tên trường của đối tượng Java (Beans/POJO).
        -không phân biệt chữ hoa, chữ thường
     -->
    <resultMap id = "result" type = "ServicePortfolioConfiguration">
       <result property = "id" column = "ID"/>
       <result property = "service_id" column = "SERVICE_ID"/>
       <result property = "name" column = "NAME"/>
       <result property = "state" column = "STATE"/>
       <result property = "aggregation_finished_at" column = "AGGREGATION_FINISHED_AT"/>
       <result property = "is_deleted" column = "IS_DELETED"/>
       <result property = "created_at" column = "CREATED_AT"/>
       <result property = "updated_at" column = "UPDATED_AT"/>
    </resultMap>
    
    
    
    
</mapper>